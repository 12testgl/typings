{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es5",
      "es2015.promise"
    ],
    "outDir": "dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "inlineSources": true,
    "newLine": "LF"
  },
  "include": [
    "src/**/*.ts",
    "typings/**/*.ts"
  ]
}
